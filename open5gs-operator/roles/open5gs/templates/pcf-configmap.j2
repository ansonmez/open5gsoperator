apiVersion: v1
kind: ConfigMap
metadata:
  name: open5gs-pcf-config
  labels:
    epc-mode: pcf
  namespace: '{{ meta.namespace }}'
data:
  pcf.yaml: |
    logger:
        file: /var/log/open5gs/pcf.log
    
    db_uri: mongodb://mongodb-svc/open5gs    
    pcf:
      sbi:     
      - addr: 0.0.0.0
        advertise: open5gs-pcf
    nrf:
     sbi:
      name: open5gs-nrf 
